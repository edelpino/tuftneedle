<h1>Orders</h1>
<div class="row form-inline">
	<div class="form-group">
	<label>Sales Channel Filter</label>
	&nbsp;&nbsp;
	<select class="form-control" name="sales_channel_filter">
		<option>No Filter</option>
		<%-sales_channels.each do |sales_channel|%>
			<option value="<%=sales_channel.key%>"><%=sales_channel.name%></option>
		<%end%>
	</select>
</div>
</div>
<div class="row">
	<table class="table table-striped">
		<thead>
			<tr>
				<th>OrderNumber</th>
				<th>Customer</th>
				<th>Sales Channel</th>
				<th>Date Created</th>
			</tr>
		</thead>
		<tbody id="orders_table">
			<%=render partial:'orders_table'%>
		</tbody>
	</table>
</div>
